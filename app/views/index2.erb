        <form action="POST" action="/result">
            
            <h2>Choose your moodmoji:</h2>
            <input type="radio" name="emoji" value="Content"><div class="emoji">&#x1F606</div><br>
              <input type="radio" name="emoji" value="Super Happy"><div class="emoji">&#x1F610</div><br>
              <input type="radio" name="emoji" value="Sad"> <div class="emoji">&#x1F614</div>
       
              
               
          <h2>Choose your activity:</h2>  
          <input type="radio" name="activity" value="Study/Quiet Work">Study/Quiet Work<br>
          <input type="radio" name="activity" value="Exercise">Exercise<br>
          <input type="radio" name="activity" value="Party">Party<br>
          <input type="radio" name="activity" value="Travel">Travel<br>
          <input type="radio" name="activity" value="Sleep"> Sleep
          
          <input type="submit" value="Match!">
        </form>
        
        
        

    </body>
</html>
